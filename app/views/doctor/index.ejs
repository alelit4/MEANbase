<html ng-app="dephisitApp">
<% include ../partialsbase/_head.ejs %>

<body ng-controller="DoctorCtrl">

<% include ../partialsbase/_navbar.ejs %>

<div class="section white">
    <div class="row container">
        <h2 class="header">List of Doctors</h2>
        <div class="col push-m10 push-l10">
            <a style="color: #b02e67;" data-target="add" class="btn-floating btn-large waves-effect waves-light modal-trigger">
                <i class="material-icons">add</i>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div ng-repeat="doc in doctors track by $index">
        <div class="col m4">
            <div class="card">
                <div class="card-image">
                    <img src="img/demos/cards_1.jpg">
                    <span class="card-title">{{doc.name}}</span>
                    <div class="card-category">
                        <img src="img/demos/129.jpg">
                    </div>
                </div>
                <div class="card-content has-category">
                    <p>
                        {{doc.patients}}
                    </p>
                </div>
                <div class="card-action">
                    <a class="icon-link"><i class="zmdi zmdi-favorite"></i>{{doc._id}}</a>
                    <a class="material-icons waves-effect" ng-click="delete(doc._id)">
                        <i class="material-icons">delete</i>
                        </a>

                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal Structure -->
<div id="add" class="modal">
    <div class="modal-content center-align">
        <h4>Add Doctor</h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col m10 offset-m1 s12 center-align">
                <div class="form-group">
                    Doctor's name:
                    <input ng-model="doctor.name" type="text" class="form-control"
                           placeholder="Detalles">
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <button type="submit" ng-click="send()" class="btn btn-succes smodal-action modal-close">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('.modal-trigger').leanModal();
</script>

</body>
</html>